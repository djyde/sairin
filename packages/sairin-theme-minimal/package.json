{
  "name": "@sairinjs/sairin-theme-minimal",
  "version": "1.0.3",
  "main": "lib/index.js",
  "scripts": {
    "dev": "concurrently npm:dev-theme npm:dev-style",
    "dev-theme": "tsc --watch",
    "dev-style": "tailwind -i ./src/style.css -o ./style.css --watch",
    "build-theme": "tsc",
    "build-style": "tailwind -i ./src/style.css -o ./style.css",
    "build": "concurrently npm:build-theme npm:build-style",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "next": "^12.1.0",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "next": "^12.1.0"
  },
  "dependencies": {
    "dayjs": "^1.10.7"
  }
}